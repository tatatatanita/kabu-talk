.post
  .upper-post
    .upper-post__user-name
      = post.user.name
    .upper-post__date
      = post.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .lower-post
    - if post.text.present?
      %p.lower-post__content
        = post.text
    = image_tag post.image.url, class: 'lower-post__image' if post.image.present?