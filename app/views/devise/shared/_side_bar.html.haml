.side-bar
  .header
    .header__box
      %h3.header__box__name
        = current_user.name
      %ul.header__box__lists
        %li.list
          = link_to new_forum_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .forums
    - current_user.forums.each do |forum|
      .forum
        = link_to forum_posts_path(forum), class: 'item' do
          .forum__name
            = forum.name
          .forum__post
            = forum.show_last_post